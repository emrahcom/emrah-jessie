# -----------------------------------------------------------------------------
# DEFAULT SERVER
# -----------------------------------------------------------------------------
server {

listen 80 default_server;
listen [::]:80 default_server;

listen 443 ssl default_server;
listen [::]:443 ssl default_server;
include snippets/ej_ssl.conf;

server_name _;
root /var/www/html;
index index.html index.htm;

# -----------------------------------------------------------------------------
# Let's Encrypt & Certbot
# -----------------------------------------------------------------------------
location /.well-known {
	log_not_found off;
}

# -----------------------------------------------------------------------------
# gogs
# -----------------------------------------------------------------------------
location / {
	proxy_pass http://127.0.0.1:6000;
}

} # server_end
